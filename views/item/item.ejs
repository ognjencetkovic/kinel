<html lang="en" ng-app="app">
<head>

    <% include ./partials/head %>

</head>
<body>
    
    <% include ./partials/sidebar %>
    <div id="main">
    
        <div class="w3-teal">
            <% include ./partials/header %>
        
            <div class="container">
                <div class="row">
        
                    <div class="col-md-12">
                        <form id="registerForm" class="form-horizontal" role="form" method="post" action="/item" data-parsley-trigger="keyup" data-parsley-validate>
                                    
                            <div class="form-group">
                                <label for="title" class="col-md-4 control-label">Naziv:</label>
                                <div class="col-md-8">
                                    <input id="title" type="text" class="form-control" name="title" placeholder="Naziv" data-parsley-trigger="change" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="unitOfMeasure" class="col-md-4 control-label">Jedinica mjere:</label>
                                <div class="col-md-8">
                                    <input id="unitOfMeasure" type="text" class="form-control" name="unitOfMeasure" placeholder="Jedinica mjere" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="purchasePrice" class="col-md-4 control-label">Nabavna cijena:</label>
                                <div class="col-md-8">
                                    <input id="purchasePrice" type="text" class="form-control" name="purchasePrice" placeholder="Nabavna cijena" required />
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-8">
                                    <button type="submit" class="btn btn-primary">Dodaj</button>
                                </div>
                            </div>
        
                        </form>
                    </div>
                </div>
        
            </div>
            
        </div>
    
    </div>
    

</body>
</html>